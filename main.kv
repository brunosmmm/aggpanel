                    pos_hint: {'x':1-(self.width/self.parent.width), 'y':0}
                    orientation: 'vertical'
                    GridLayout:
                        size_hint: 1, 1
                        cols: 3
                        spacing: 5
                        #col_default_width: 60
                        #row_default_height: 60
                        remote_node: 'silicon'
                        Image:
                            source: 'img/tv_red.png'
