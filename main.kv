                            key_name: 'KEY_HOME'
                        KeyLeft:
                            id: tvleft
                            remote_name: 'rokuTV'
                            key_name: 'KEY_LEFT'
                        KeyOK:
                            id: tvok
                            remote_name: 'rokuTV'
                            key_name: 'KEY_OK'
                        KeyRight:
                            id: tvright
                            remote_name: 'rokuTV'
                            key_name: 'KEY_RIGHT'
                        KeyRefreshBack:
                            id: tvexit
                            remote_name: 'rokuTV'
                            key_name: 'KEY_EXIT'
                        KeyDown:
